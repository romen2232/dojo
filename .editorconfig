# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# PHP files
[*.php]
indent_style = space
indent_size = 4

# Composer files
[{composer.json,composer.lock}]
indent_style = space
indent_size = 4

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# Docker files
[{Dockerfile,docker-compose.yml}]
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
end_of_line = lf
indent_style = space
indent_size = 2
